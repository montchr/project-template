root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[*.{bash,fish,neon,php,py,rs,xml,zsh}]
indent_size = 4
indent_style = space

[*.org]
indent_size = 8
indent_style = space

[*.md]
indent_size = 4
indent_style = space
trim_trailing_whitespace = false

[*.{neon,xml}.dist]
indent_size = 4
indent_style = space

[*.{bash,sh}]
indent_size = 4
indent_style = space

[{*.{pub,txt},.reuse/**}]
indent_size = unset
insert_final_newline = false

[*.{diff,patch}]
indent_size = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset

[{LICENSES/**,LICENSE,secrets/**,keys/**}]
indent_size = unset
indent_style = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
